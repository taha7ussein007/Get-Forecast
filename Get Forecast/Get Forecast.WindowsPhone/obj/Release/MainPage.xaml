                            </Grid.Background>

                            <StackPanel VerticalAlignment="Top" Margin="20">

                                <TextBlock x:Name="name4" Foreground="Brown" FontWeight="ExtraBold" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Text="Choose Date : *optional*"
